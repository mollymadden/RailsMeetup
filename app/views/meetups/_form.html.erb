<%= form_with(model: meetup, local: true) do |form| %>
  <% if meetup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meetup.errors.count, "error") %> prohibited this meetup from being saved:</h2>

      <ul>
        <% meetup.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :eventdate %>
    <%= form.datetime_select :eventdate %>
  </div>

  <div class="field">
    <%= form.label :creationdate %>
    <%= form.datetime_select :creationdate %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_area :location %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.select :user_id, options_for_select( User.all.collect { |u| [u.name, u.id] }, :selected => meetup.user_id) %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_area :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select :category_id, options_for_select( Category.all.collect { |u| [u.info, u.id] }, :selected => meetup.category_id) %>
  </div>

  <div class="field">
    <%= form.label :imageURL %>
    <%= form.text_area :imageURL %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
