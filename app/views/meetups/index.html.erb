<p id="notice"><%= notice %></p>

<h1>Meetups</h1>

<table>
  <thead>
    <tr>
      <th>Eventdate</th>
      <th>Creationdate</th>
      <th>Location</th>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Imageurl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetups.each do |meetup| %>
      <tr>
        <td><%= meetup.eventdate %></td>
        <td><%= meetup.creationdate %></td>
        <td><%= meetup.location %></td>
        <td><%= meetup.user.name %></td>
        <td><%= meetup.title %></td>
        <td><%= meetup.description %></td>
        <td><%= meetup.category.info %></td>
        <td><%= meetup.imageURL %></td>
        <td><%= link_to 'Show', meetup %></td>
        <td><%= link_to 'Edit', edit_meetup_path(meetup) %></td>
        <td><%= link_to 'Destroy', meetup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meetup', new_meetup_path %>
